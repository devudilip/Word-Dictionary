<%= form_for @word, :html => { :class => 'form-horizontal' } do |f| %>
<div class="control-group">
  <%= f.label :name, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, :class => 'text_field' %>
    <%= f.select :word_language_id, WordLanguage.all.map{ |lan| [lan.language_code, lan.id] },  :class => 'number_field' %>
  </div>
</div>

<%= f.fields_for :correct_words do |builder| %>
<%= render 'correct_word_fields', f: builder %>
<% end %>

<%= f.fields_for :wrong_words do |builder| %>
<%= render 'wrong_word_fields', f: builder %>
<% end %>
<%= link_to_add_fields "Add wrong word", f, :wrong_words %>

<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  words_path, :class => 'btn' %>
</div>
<% end %>
