<div class="page-header">
  <h1>  Words </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Word </th>
      <th> Correct Word </th>
      <th> Wrong Word </th>
      <th> Correct Usage </th>
      <th> Wrong Usage </th>
    </tr>
  </thead>
  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.name %></td>
        <td><%= word.correct_words.first.name %></td>
        <td><%= word.wrong_words.first.name %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New",
            new_word_path,
            :class => 'btn btn-primary' %>
